@page

@model PlayerModel
@{
    ViewData["Title"] = "Player info";
    ViewData["ActivePage"] = ManageNavPages.Player;
}


<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.Message" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Player.Id" type="hidden"/>
            <div class="form-group">
                <label asp-for="Player.UserName"></label>
                <input asp-for="Player.UserName" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Player.Age"></label>
                <input asp-for="Player.Age" class="form-control" />
                <span asp-validation-for="Player.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Info"></label>
                <textarea asp-for="Player.Info" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Player.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}